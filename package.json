{
	"name": "undirected",
	"version": "0.0.1",
	"description": "JavaScript implementation of undirected graphs through adjacency lists",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/giannotr/undirected-js.git"
	},
	"keywords": [
		"undirected",
		"graphs",
		"graph",
		"theory",
		"network",
		"path",
		"algorithm",
		"data",
		"structures"
	],
	"author": "Ruben Giannotti",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/giannotr/undirected-js/issues"
	},
	"homepage": "https://github.com/giannotr/undirected-js#readme",
	"scripts": {
		"build": "tsc",
		"prepare": "npm run build",
		"test": "jest --coverage",
		"test-dev": "xo && npm run test && npm run prepare"
	},
	"devDependencies": {
		"coveralls": "^3.1.0",
		"jest": "^25.4.0",
		"ts-jest": "^25.4.0",
		"typescript": "^3.8.3",
		"xo": "^0.30.0"
	},
	"xo": {
		"rules": {
			"comma-dangle": "off",
			"object-curly-spacing": "off",
			"@typescript-eslint/keyword-spacing": "off",
			"@typescript-eslint/brace-style": "warn",
			"@typescript-eslint/restrict-plus-operands": "warn",
			"@typescript-eslint/semi": "warn",
			"@typescript-eslint/prefer-readonly-parameter-types": "warn"
		},
		"ignores": [
			"./src/**/*.test.js"
		]
	},
	"jest": {
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/coverage/",
			"/lib/"
		],
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/__tests__/**/*.+(ts|tsx|js)",
			"**/?(*.)+(spec|test).+(ts|tsx|js)"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		}
	},
	"dependencies": {
		"type-insurance": "^1.2.3"
	}
}
